<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/widget_vertical_margin"
        android:paddingStart="@dimen/widget_vertical_margin">

        <TextView
            android:id="@+id/stats_heading"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_heading_statistics"/>

        <TextView
            android:id="@+id/stats_producers"
            android:fontFamily="sans-serif"
            android:paddingLeft="@dimen/widget_vertical_tab"
            android:paddingStart="@dimen/widget_vertical_tab"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="@string/widget_statistics_producers_preview"/>

        <TextView
            android:id="@+id/stats_drinks"
            android:paddingLeft="@dimen/widget_vertical_tab"
            android:paddingStart="@dimen/widget_vertical_tab"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="@string/widget_statistics_drinks_preview"/>

        <TextView
            android:id="@+id/stats_reviews"
            android:paddingLeft="@dimen/widget_vertical_tab"
            android:paddingStart="@dimen/widget_vertical_tab"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="@string/widget_statistics_reviews_preview"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/widget_vertical_margin"
        android:layout_marginEnd="@dimen/widget_vertical_margin"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/widget_search_button"
            android:layout_width="@dimen/widget_button_size"
            android:layout_height="@dimen/widget_button_size"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="@string/cd_search_review"/>

        <ImageButton
            android:id="@+id/widget_add_button"
            android:layout_width="@dimen/widget_button_size"
            android:layout_height="@dimen/widget_button_size"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_add"
            android:contentDescription="@string/cd_add_new_review"
            android:layout_gravity="center_vertical|end"/>

    </LinearLayout>

</FrameLayout>