<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_producer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:gravity="center"
            android:text="@string/example_brewery"/>

        <TextView
            android:id="@+id/list_item_drink_name"
            android:layout_width="wrap_content"
            android:maxLines="3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/example_drink_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_drink_type"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/example_drink_type"/>

        <TextView
            android:id="@+id/list_item_drink_style"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:text="@string/example_drink_style"/>
    </LinearLayout>

</LinearLayout>