<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_producer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THE Brewery"/>

        <TextView
            android:id="@+id/list_item_producer_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="since 1666"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_producer_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some country"/>

        <TextView
            android:id="@+id/list_item_producer_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some town"/>
    </LinearLayout>


</LinearLayout>